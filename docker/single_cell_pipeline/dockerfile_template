# build on top of out base image
FROM {container_registry}/singlecellpipeline/python_singlecell_qc:v0.1.1

# Copy the current directory contents into the container at /app
ADD . /app

# Install any needed packages specified in requirements.txt
RUN pip install -e git+https://github.com/shahcompbio/pypeliner.git@43d6add15398379fa296de9b5faef6d75d142664#egg=pypeliner
RUN pip install -e git+https://bitbucket.org/aroth85/biowrappers.git@19f72e5d2ee39708ffb4600c2c62f1cfdb2e7af9#egg=biowrappers
RUN pip install -e git+https://github.com/shahcompbio/single_cell_pipeline.git@{git_commit}#egg=single-cell-pipeline

# Make port 80 available to the world outside this container
EXPOSE 80

# Define environment variable
ENV NAME scpipeline

# Run app.py when the container launches
CMD ["python"]
